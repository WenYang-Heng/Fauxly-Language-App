<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C212F"
    android:foregroundTintMode="src_over">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="858dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVCourseTitle"
                android:layout_width="309dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="0dp"
                android:text="Course"
                android:textColor="#F7E4C3"
                android:textSize="50sp"/>

            <ImageButton
                android:id="@+id/IBCourse"
                android:layout_width="wrap_content"
                android:layout_height="89dp"
                android:background="#00FFFFFF"
                android:padding="30dp"
                android:paddingTop="50dp"
                android:src="@drawable/book"/>
        </LinearLayout>

        <TextView
            android:id="@+id/TVLevel"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:paddingTop="1dp"
            android:text="LEVEL"
            android:textColor="#F7E4C3"/>

        <Space android:layout_width="match_parent" android:layout_height="16dp"/>

        <ImageView
            android:layout_width="367dp"
            android:layout_height="19dp"
            android:contentDescription="Bar"
            android:paddingStart="20dp"
            android:src="@drawable/rectangle_23"/>

        <TextView
            android:id="@+id/TVWordBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="TextView"
            android:textColor="#F7E4C3"/>

        <Space android:layout_width="match_parent" android:layout_height="19dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="204.5sp"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    android:background="#F7E4C3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/TVPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48dp"
                        android:text="0,000" android:textColor="#2B7A0A"
                        android:textSize="34sp" android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.481"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Points"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/TVPoints"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/FBadgeRank"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/IVRankBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_2"/>
            </FrameLayout>
        </LinearLayout>

        <Space android:layout_width="match_parent" android:layout_height="19dp"/>

        <ImageView
            android:id="@+id/IVDailyStreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/daily_streaks__1_"/>

        <Space android:layout_width="match_parent" android:layout_height="19dp"/>

        <TextView
            android:id="@+id/TVDailyReward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Daily Login Reward"
            android:textColor="#F7E4C3"/>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="11dp"
            app:justifyContent="space_between">

            <LinearLayout
                android:id="@+id/day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/xp_claim_rounded_corners"
                android:padding="10dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/xp_claim_wrapper" />
                <TextView
                    android:id="@+id/tvDay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Day 1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/xp_claim_rounded_corners"
                android:padding="10dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/xp_claim_wrapper" />
                <TextView
                    android:id="@+id/tvDay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Day 2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/xp_claim_rounded_corners"
                android:padding="10dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/xp_claim_wrapper" />
                <TextView
                    android:id="@+id/tvDay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Day 3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/xp_claim_rounded_corners"
                android:padding="10dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/xp_claim_wrapper" />
                <TextView
                    android:id="@+id/tvDay4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Day 4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/day5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/xp_claim_rounded_corners"
                android:padding="10dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/xp_claim_wrapper" />
                <TextView
                    android:id="@+id/tvDay5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Day 5" />
            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>

<!--        <ImageButton-->
<!--            android:id="@+id/IBClaim"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="#00FFFFFF"-->
<!--            android:src="@drawable/frame_18"/>-->

        <Space android:layout_width="match_parent" android:layout_height="19dp"/>

        <ImageButton
            android:id="@+id/IBAchievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/daily_streaks__2_"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/TVUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="19dp"
            android:text="TextView"
            android:textColor="#F7E4C3"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/IVProfilePicture"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/IVProfilePicture"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/ryan_gosling"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.509"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>